<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.ArticleMapper">
  <resultMap id="BaseResultMap" type="com.xiaomai.supershopowner.entity.Article">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="resource" jdbcType="VARCHAR" property="resource" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="is_recommended" jdbcType="INTEGER" property="isRecommended" />
    <result column="images_id" jdbcType="INTEGER" property="imagesId" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, content, resource, create_time, is_recommended, images_id
  </sql>
      <sql id="queryMap">
		<if test="createTime !=null and createTime != ''">
    		<![CDATA[and DATE_FORMAT(create_time, '%Y-%m-%d') =  DATE_FORMAT(#{createTime}, '%Y-%m-%d')]]>
    	</if>
   </sql> 
    
   <select id="findListAllWithMap" parameterType="map" resultMap="BaseResultMap">
	  	select <include refid="Base_Column_List" /> from article where 1=1 <include refid="queryMap"/> order by id
   </select>
</mapper>