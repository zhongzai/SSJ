<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.LossMapper">
  <resultMap id="BaseResultMap" type="com.xiaomai.supershopowner.entity.Loss">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="store_code" jdbcType="VARCHAR" property="storeCode" />
    <result column="loss_value" jdbcType="DECIMAL" property="lossValue" />
    <result column="loss_number" jdbcType="INTEGER" property="lossNumber" />
    <result column="loss_code" jdbcType="VARCHAR" property="lossCode" />
    <result column="loss_time" jdbcType="DATE" property="lossTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, store_code, loss_value, loss_number, loss_code, loss_time
  </sql>
    <sql id="queryMap">
  		<if test="lossTime !=null and lossTime != ''">
    		<![CDATA[and DATE_FORMAT(loss_time, '%Y-%m-%d') =  DATE_FORMAT(#{lossTime}, '%Y-%m-%d')]]>
    	</if>
    	<if test="storeCode != null">
			and store_code = #{storeCode,jdbcType=VARCHAR}
		</if>
   </sql>
 
  <select id="findListAllWithMap" parameterType="map" resultMap="BaseResultMap">
  		select <include refid="Base_Column_List"/> from loss where 1=1 
  		
  			<include refid="queryMap" /> order by id
  </select>
  
  
  <select id="findWithMap" parameterType="map" resultMap="BaseResultMap">
  		select <include refid="Base_Column_List"/> from loss where 1=1 
  		
  			<include refid="queryMap" /> order by id
  </select>
  

</mapper>