<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.LossMapper">
  <resultMap id="BaseResultMap" type="com.xiaomai.supershopowner.entity.Loss">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="store_code" jdbcType="VARCHAR" property="storeCode" />
    <result column="loss_value" jdbcType="DECIMAL" property="lossValue" />
    <result column="loss_number" jdbcType="INTEGER" property="lossNumber" />
    <result column="loss_code" jdbcType="VARCHAR" property="lossCode" />
    <result column="loss_time" jdbcType="DATE" property="lossTime" />
    <result column="update_time" jdbcType="DATE" property="updateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, store_code, loss_value, loss_number, loss_code, loss_time,update_time
  </sql>
    <sql id="queryMap">
  		<if test="salesDate !=null and salesDate != ''">
    		<![CDATA[and DATE_FORMAT(loss_time, '%Y-%m-%d') =  DATE_FORMAT(#{salesDate}, '%Y-%m-%d')]]>
    	</if>
    	<if test="storeCode != null">
			and store_code = #{storeCode,jdbcType=VARCHAR}
		</if>
		<if test="goodsCode != null">
			and goods_code = #{goodsCode,jdbcType=VARCHAR}
		</if>
   </sql>
 
  <select id="findListAllWithMap" parameterType="map" resultMap="BaseResultMap">
  		select <include refid="Base_Column_List"/> from loss where 1=1 <include refid="queryMap" /> order by id
  		
  			
  </select>
  <select id="findByStoreCode"  resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from loss
    where store_code = #{storeCode,jdbcType=VARCHAR}
  </select>
  
  
  <select id="findByGoodCode"  resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from loss
    where goods_code = #{goodCode,jdbcType=VARCHAR}
  </select>
  
  <delete id="delete" parameterType="java.lang.Integer">
    delete from loss
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.xiaomai.supershopowner.entity.Loss" useGeneratedKeys="true" keyProperty="id">
    insert into loss (id, store_code, loss_value, 
      loss_number, loss_code, loss_time
      )
    values (#{id,jdbcType=INTEGER}, #{storeCode,jdbcType=VARCHAR}, #{lossValue,jdbcType=DECIMAL}, 
      #{lossNumber,jdbcType=INTEGER}, #{lossCode,jdbcType=VARCHAR}, #{lossTime,jdbcType=DATE}
      )
  </insert>
 
  <update id="update" parameterType="com.xiaomai.supershopowner.entity.Loss">
    update loss
    <set>
      <if test="storeCode != null">
        store_code = #{storeCode,jdbcType=VARCHAR},
      </if>
      <if test="lossValue != null">
        loss_value = #{lossValue,jdbcType=DECIMAL},
      </if>
      <if test="lossNumber != null">
        loss_number = #{lossNumber,jdbcType=INTEGER},
      </if>
      <if test="lossCode != null">
        loss_code = #{lossCode,jdbcType=VARCHAR},
      </if>
      <if test="lossTime != null">
        loss_time = #{lossTime,jdbcType=DATE},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime,jdbcType=DATE},
      </if>
    </set>
    where loss_code = #{lossCode,jdbcType=VARCHAR}
  </update>
</mapper>