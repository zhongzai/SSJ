<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sqlmap.User">
  <resultMap id="BaseResultMap" type="user">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="real_name" jdbcType="VARCHAR" property="realName" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="checkcode" jdbcType="VARCHAR" property="checkcode" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="sex" jdbcType="INTEGER" property="sex" />
    <result column="isDel" jdbcType="INTEGER" property="isDel" />
  </resultMap>
  <sql id="Base_Column_List">
    user_id, user_name, real_name, password, checkcode, phone, create_time, update_time, 
    address, email,isDel,sex
  </sql>
  <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from tb_users
    where user_id = #{userId,jdbcType=INTEGER}
  </select>
  
  <select id="findUserByName" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from tb_users
		where user_name = #{userName,jdbcType=VARCHAR}
		order by user_id desc
	</select>
  
  
  
  <!--查询列参数  -->
	<sql id="queryMap">
	
	  <if test="username != null">
         and user_name = #{username,jdbcType=VARCHAR}
      </if>
      <if test="realName != null">
         and real_name = #{realName,jdbcType=VARCHAR}
      </if>
      <if test="password != null">
        and password = #{password,jdbcType=VARCHAR}
      </if>
      <if test="checkcode != null">
        and checkcode = #{checkcode,jdbcType=VARCHAR}
      </if>
      <if test="phone != null">
        and phone = #{phone,jdbcType=VARCHAR}
      </if>
      <if test="startDate != null">
        and create_time >= #{startDate,jdbcType=VARCHAR}
      </if>
      <if test="endDate != null">
      <![CDATA[
			and create_time <= #{endDate,jdbcType=VARCHAR}
		]]>
      </if>
      <if test="updateTime != null">
        and update_time >= #{updateTime,jdbcType=TIMESTAMP}
      </if>
      <if test="address != null">
        and address = #{address,jdbcType=VARCHAR}
      </if>
      <if test="email != null">
        and email = #{email,jdbcType=VARCHAR}
      </if>
      <if test="sex != null">
      	and sex = #{sex,jdbcType=INTEGER}
      </if>
		
    </sql>
    <!-- 总记录数 -->
    <select id="findListCount" parameterType="map" resultType="int">
		select count(1)
		from tb_users
		where 1 = 1
		<include refid="queryMap"/>
		order by user_id desc
	</select>
	<!-- 查询列表 -->
	<select id="findList" parameterType="map" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from tb_users
		where  1 = 1
		<include refid="queryMap"/>
		order by user_id desc
		limit   #{startIndex,jdbcType=INTEGER},#{rows,jdbcType=INTEGER}
	</select>
	<!-- 查询所有 -->
	<select id="findListAll" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from tb_users
		where 1 = 1
		order by user_id asc
	</select>
	<!-- 查询所有 -->
	<select id="findListAllWithMap" parameterType="map"  resultMap="BaseResultMap">
		select
	    <include refid="Base_Column_List" />
		from tb_users
		where 1=1
		<include refid="queryMap"/>
		order by user_id asc
	</select>
  
  
  
  
  
  
  
  
  <delete id="delete" parameterType="java.lang.Integer">
    delete from tb_users
    where user_id = #{userId,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="user">
    insert into tb_users
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        user_id,
      </if>
      <if test="userName != null">
        user_name,
      </if>
      <if test="realName != null">
        real_name,
      </if>
      <if test="password != null">
        password,
      </if>
      <if test="checkcode != null">
        checkcode,
      </if>
      <if test="phone != null">
        phone,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="updateTime != null">
        update_time,
      </if>
      <if test="address != null">
        address,
      </if>
      <if test="email != null">
        email,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="userName != null">
        #{userName,jdbcType=VARCHAR},
      </if>
      <if test="realName != null">
        #{realName,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        #{password,jdbcType=VARCHAR},
      </if>
      <if test="checkcode != null">
        #{checkcode,jdbcType=VARCHAR},
      </if>
      <if test="phone != null">
        #{phone,jdbcType=VARCHAR},
      </if>
     <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime,jdbcType=TIMESTAMP},
      </if>
      <if test="address != null">
        #{address,jdbcType=VARCHAR},
      </if>
      <if test="email != null">
        #{email,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="update" parameterType="user">
    update tb_users
    <set>
      <if test="userName != null">
        user_name = #{userName,jdbcType=VARCHAR},
      </if>
      <if test="realName != null">
        real_name = #{realName,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        password = #{password,jdbcType=VARCHAR},
      </if>
      <if test="checkcode != null">
        checkcode = #{checkcode,jdbcType=VARCHAR},
      </if>
      <if test="phone != null">
        phone = #{phone,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime,jdbcType=TIMESTAMP},
      </if>
      <if test="address != null">
        address = #{address,jdbcType=VARCHAR},
      </if>
      <if test="email != null">
        email = #{email,jdbcType=VARCHAR},
      </if>
      <if test="isDel != null">
        isDel = #{isDel,jdbcType=INTEGER},
      </if>
       <if test="sex != null">
        sex = #{sex,jdbcType=INTEGER},
      </if>
    </set>
    where user_id = #{userId,jdbcType=INTEGER}
  </update>
  

</mapper>